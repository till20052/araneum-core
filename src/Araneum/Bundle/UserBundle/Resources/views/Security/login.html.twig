{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/araneumuser/css/style.css') }}"/>
{% endblock %}

{% block body %}
    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>{{ 'sign_in'|trans }} {{ 'to'|trans }} Araneum.Core</strong>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="{{ path("fos_user_security_check") }}" id="loginForm" method="POST">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                            <fieldset>
                                <div class="row">
                                    <div class="center-block">
                                        <img class="profile-img"
                                             src="{{ asset('bundles/araneumuser/images/no-user.png') }}" alt=""/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
												<span class="input-group-addon">
													<i class="glyphicon glyphicon-user"></i>
												</span>
                                                <input class="form-control" placeholder="{{ 'username'|trans }}"
                                                       name="_username" type="text" id="name" autofocus>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
												<span class="input-group-addon">
													<i class="glyphicon glyphicon-lock"></i>
												</span>
                                                <input class="form-control" placeholder="{{ 'password'|trans }}"
                                                       name="_password" type="password" id="password" value="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <label class="pull-left">
                                                    <input type="checkbox" value="remember-me" name="_remember_me">
                                                    {{ 'remember_me'|trans }}
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-lg btn-primary btn-block"
                                                   value="{{ 'sign_in'|trans }}">
                                        </div>
                                    </div>
                                </div>

                                <div id="msgbox" class="alert alert-danger alert-dismissible" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                                aria-hidden="true">&times;</span></button>
                                </div>

                                <div class="alert alert-danger alert-dismissible {{ error ? '' : 'hidden' }}"
                                     role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                                aria-hidden="true">&times;</span></button>
                                    {% if error %}
                                        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
                                    {% endif %}
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <div class="panel-footer ">
                        <a href="{{ path("fos_user_resetting_request") }}"
                           onClick="">{{ 'recovery_password'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/vendor/jquery-validation/dist/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('bundles/araneumuser/js/validateLogin.js') }}"></script>
{% endblock %}