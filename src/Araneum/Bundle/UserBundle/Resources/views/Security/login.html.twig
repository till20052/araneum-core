{% extends "::base.html.twig" %}
{% block body %}
    {% stylesheets
    '@AraneumUserBundle/Resources/public/css/style.css' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>{{ 'sign_in'|trans }} {{ 'to'|trans }} Araneum.Core</strong>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="{{ path("fos_user_security_check") }}" method="POST">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                            <fieldset>
                                <div class="row">
                                    <div class="center-block">
                                        <img class="profile-img" src="http://zelmer.technoportal.ua/i/no-user.png"
                                             alt="">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
												<span class="input-group-addon">
													<i class="glyphicon glyphicon-user"></i>
												</span>
                                                <input class="form-control" placeholder="{{ 'username'|trans }}"
                                                       name="_username" type="text" autofocus>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
												<span class="input-group-addon">
													<i class="glyphicon glyphicon-lock"></i>
												</span>
                                                <input class="form-control" placeholder="{{ 'password'|trans }}"
                                                       name="_password" type="password" value="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <label class="checkbox pull-left">
                                                    <input type="checkbox" value="remember-me">
                                                    {{ 'remember_me'|trans }}
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-lg btn-primary btn-block"
                                                   value="{{ 'sign_in'|trans }}">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <div class="panel-footer ">
                        <a href="#" onClick="">{{ 'recovery_password'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}
